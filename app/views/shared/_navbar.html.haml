.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "#"} Project name
    .navbar-collapse.collapse
      - if current_user
        .navbar-form.navbar-right
          %a.navbar-brand{href: "#"} #{current_user.email}
          = button_to "Log out", log_out_path, class: 'button btn btn-success'
      - else
        = form_tag sessions_path, role: 'form', class: ' navbar-form navbar-right' do
          .form-group
            = text_field_tag :email, params[:email], placeholder: '输入您的邮箱', class: 'form-control'
          .form-group
            = password_field_tag :password, params[:password], placeholder: '输入您的密码', class: 'form-control', required: ''
          = submit_tag "登录", class: 'btn btn-success'
    / /.navbar-collapse
