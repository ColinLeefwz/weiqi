.container
  = form_for(resource, as: resource_name, url: user_session_path, html: { class: "form-signin"}) do |f|
    %h2
      .form-signin-heading
        请您输入您的邮箱和密码
    = f.email_field :email, placeholder: '输入您的邮箱', class: 'form-control', required: '', autofocus: 'true'
    = f.password_field :password, placeholder: '输入您的密码', class: 'form-control', required: '', autocomplete: 'off'
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me
        = f.label "记住我"
    = f.submit "登录", class: 'btn btn-lg btn-primary btn-block'

= render "devise/shared/links"
